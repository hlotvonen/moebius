{
  "name": "moebius",
  "type": "commonjs",
  "version": "2.2.0",
  "description": "Modern ASCII Art Editor with custom font and color support",
  "repository": {
    "type": "git",
    "url": "https://github.com/hlotvonen/moebius.git"
  },
  "main": "app/moebius.js",
  "scripts": {
    "start": "electron --no-sandbox --inspect=5858 .",
    "build-script": "browserify app/web_client/script.js -o server/script.js",
    "build": "npx electron-builder -mwl",
    "build-mac": "npx electron-builder -m",
    "build-win": "npx electron-builder -w",
    "build-linux": "npx electron-builder -l",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "author": "Andy Herbert <andy.herbert@gmail.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "browserify": "^16.5.1",
    "electron": "^12.0.2",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "express": "^4.17.1",
    "prettier": "^3.2.4"
  },
  "dependencies": {
    "@andreekeberg/imagedata": "^1.0.2",
    "discord-rpc": "^3.1.1",
    "electron-debug": "^3.2.0",
    "electron-is-dev": "^1.2.0",
    "iconv-lite": "^0.6.3",
    "json5": "^2.1.3",
    "linkifyjs": "^2.1.9",
    "minimist": "^1.2.5",
    "upng-js": "^2.1.0",
    "ws": "^7.4.6",
    "yarn": "^1.22.21"
  }
}
